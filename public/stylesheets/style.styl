@font-face
	font-family texticon
	src url('texticon.ttf') format('truetype')

h1
	text-align center
	line-height 70px
	font-size 21px
	font-weight bold
	color #AAA
	text-shadow 0 2px 0 white

h2
	font-size 17px
	margin-bottom 5px

.desc
	text-align center
	color #777
	font-size 15px
	text-shadow 0 2px 0 white

.usage
	margin-top	10px
	text-align center
	color #aaa
	font-size 13px
	text-shadow 0 2px 0 white

.commonbg
	background url('/images/lightbg.png') repeat top center

#addarticlebutton
	position fixed
	display block
	bottom 20px
	left 20px
	width 210px
	height 35px
	line-height 35px
	text-align center
	color #fff
	border 1px solid #27272B;
	border-radius 3px
	background -webkit-linear-gradient(center top , #32A4EC 0%, #147CB9 100%) repeat scroll 0 0 transparent
	background -moz-linear-gradient(center top , #32A4EC 0%, #147CB9 100%) repeat scroll 0 0 transparent
	background -o-linear-gradient(center top , #32A4EC 0%, #147CB9 100%) repeat scroll 0 0 transparent
	background -ms-linear-gradient(center top , #32A4EC 0%, #147CB9 100%) repeat scroll 0 0 transparent
	background linear-gradient(center top , #32A4EC 0%, #147CB9 100%) repeat scroll 0 0 transparent
	-webkit-box-shadow 0 1px 0 rgba(255, 255, 255, 0.3) inset, 0 1px 0 #46464C
	-moz-box-shadow 0 1px 0 rgba(255, 255, 255, 0.3) inset, 0 1px 0 #46464C
	box-shadow 0 1px 0 rgba(255, 255, 255, 0.3) inset, 0 1px 0 #46464C
	text-shadow 0 1px 1px rgba(0, 0, 0, 0.5);

#navigationbar
	position fixed
	overflow auto
	top 0
	bottom 0
	left 0
	width 250px
	background url('/images/darkbg.png') repeat top center

.navigationitem
	&.active
		box-shadow 0 0 10px #111 inset
		a
			border-top 1px solid #222
			color white
	a
		display block
		padding 10px 20px
		line-height 20px
		color gray
		text-shadow #111 0px 2px 0px
		border-top 1px solid #45423D
		border-bottom 1px solid #312F2B

#content
	position fixed
	overflow auto
	top 0
	bottom 0
	left 250px
	right 0
	bottom 0
	box-shadow 0 0 15px #111
	background url('/images/lightbg.png') repeat top center

.doc
	position relative
	margin 30px 100px 30px 30px
	padding 15px
	background-color #fff
	border-top 1px solid #fff
	border-radius 3px
	box-shadow 0 1px 2px #aaa

.sharehandler
	position absolute
	top 0
	right -55px
	font-family texticon
	font-size 50px
	color rgba(0,0,0,0.3)
	text-shadow 1px 1px 0px rgba(255,255,255,0.5)
	content '/'

#editor
	position relative
	width 80%
	min-height 100%
	overflow hidden
	margin 0 auto
	background-color #fff
	border-top 1px solid #fff
	border-top-left-radius 5px
	border-top-right-radius 5px
	box-shadow 0 1px 2px #aaa
	input
		display block
		width 90%
		padding 10px
		margin 3% auto 0 auto
		border 1px solid #e0e0e0
		border-radius 5px
		font-size 14px
		box-shadow 1px 1px 3px #eee inset
	textarea
		display block
		resize none
		width 90%
		padding 10px
		margin 5px auto
		border 1px solid #e0e0e0
		border-radius 5px
		box-shadow 1px 1px 3px #eee inset
	button
		display block
		overflow hidden 
		width 90%
		height 40px
		margin 3% auto 0 auto 
		font-size 15px
		color white
		border 1px solid #147CB9
		border-radius 3px
		background -webkit-linear-gradient(center top , #32A4EC 0%, #147CB9 100%) repeat scroll 0 0 transparent
		background -moz-linear-gradient(center top , #32A4EC 0%, #147CB9 100%) repeat scroll 0 0 transparent
		background -o-linear-gradient(center top , #32A4EC 0%, #147CB9 100%) repeat scroll 0 0 transparent
		background -ms-linear-gradient(center top , #32A4EC 0%, #147CB9 100%) repeat scroll 0 0 transparent
		background linear-gradient(center top , #32A4EC 0%, #147CB9 100%) repeat scroll 0 0 transparent
		-webkit-box-shadow 0 1px 0 rgba(255, 255, 255, 0.3) inset, 0 1px 0 #46464C
		-moz-box-shadow 0 1px 0 rgba(255, 255, 255, 0.3) inset, 0 1px 0 #46464C
		box-shadow 0 1px 0 rgba(255, 255, 255, 0.3) inset, 0 1px 0 #46464C;
		text-shadow 0 1px 1px rgba(0, 0, 0, 0.5);
			
